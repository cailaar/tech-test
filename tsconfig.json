{
  "compilerOptions": {
    "target": "es6",                 
    "module": "commonjs",            
    "strict": true,                  
    "esModuleInterop": true,         
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./dist",              
    "rootDir": "./src",              
    "noImplicitAny": true,          
    "skipLibCheck": true,            
    "strictNullChecks": true         
  },
  "include": ["src/**/*", "src/main.ts"],           
  "exclude": ["node_modules", "dist"] 
}
